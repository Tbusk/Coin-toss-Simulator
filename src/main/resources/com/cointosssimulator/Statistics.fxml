<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.cointosssimulator.StatisticsController">
    <VBox alignment="CENTER" style="-fx-padding: 20px" spacing="15">
        <Label fx:id="coinsTossed"/>
        <Label fx:id="gamesWon"/>
        <Label fx:id="gamesLost"/>
        <Label fx:id="headsLanded"/>
        <Label fx:id="tailsLanded"/>
        <Button fx:id="backButton" text="Back" onAction="#switchBackToMainScene"/>
    </VBox>

</AnchorPane>
