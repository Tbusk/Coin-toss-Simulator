<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.cointosssimulator.HelpPageController">
    <VBox alignment="TOP_CENTER" style="-fx-padding: 25px;" spacing="10">
        <Label text="Contact Us" style="-fx-font-size: 35px"/>
        <Label fx:id="subjectTextLabel" text="Message Subject"/>
        <TextArea fx:id="subjectTextArea"/>
        <Label fx:id="bodyTextLabel" text="Message Body"/>
        <TextArea fx:id="bodyTextArea"/>
        <HBox alignment="CENTER" spacing="75">
            <Button fx:id="sendMessage" text="Send Email" onAction="#sendEmail"/>
            <Button fx:id="backHelpButton" text="    Back    " onAction="#switchBackToMain"/>
        </HBox>
    </VBox>
</AnchorPane>
